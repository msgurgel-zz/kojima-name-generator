    <%= f.text_field :full_name %>

    <%= f.label "2. What's your occupation? (single -er noun)?", class: "question" %>
    <%= f.text_field :one_word_occupation %>

    <%= f.label "3. What was your first pet's specific species/breed? " \
                "If you never had a pet, please answer with an animal you wish " \
                "you owned.", class: "question" %>
    <%= f.text_field :pet %>

    <%= f.label "4. Condese your most embarrassing childhood memory into two words.", class: "question" %>
    <%= f.text_field :two_word_memory %>

    <%= f.label "5. What is the object you'd least like to be stabbed by?", class: "question"  %>
    <%= f.text_field :least_stab_object %>

    <%= f.label "6. What is something you are good at? (Verb ending in -ing)", class: "question"  %>
    <%= f.text_field :good_at %>

    <%= f.label "7. What is your greatest intangible fear (example: death, loneliness, fear itself)", class: "question"  %>
    <%= f.text_field :intangible_fear %>

    <%= f.label "8. What is your greatest tangible fear (example: horses)", class: "question"  %>
    <%= f.text_field :tangible_fear %>

    <%= f.label "9. What is the last thing you did before starting this worksheet?", class: "question"  %>
    <%= f.text_field :last_thing_you_did %>

    <%= f.label "10. What condition is your body currently in? (single word answer)", class: "question"  %>
    <%= f.text_field :body_condition %>

    <%= f.label "11. Favorite state of matter?", class: "question"  %>
